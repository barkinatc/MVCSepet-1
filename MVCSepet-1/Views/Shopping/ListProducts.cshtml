@model ListProductPageVM
@{
    ViewBag.Title = "ListProducts";
}


<h2>Sepetinize gitmek için @Html.ActionLink("tıklayınız","CartPage")</h2>

<h3>@TempData["mesaj"]</h3>
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>Urun Ismi</th>
            <th>Urun Fiyati</th>
            <th>Sepet Islem</th>
        </tr>
        @foreach (ProductVM item in Model.Products)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@Html.ActionLink("Sepete at","AddToCart" ,new {id =item.ID},new {@class="btn btn-success"})</td>
            </tr>
        }
    </table>
</div>

